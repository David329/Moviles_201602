@model GuianClient.ViewModel.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Iniciar Sesión - Muévete UPC</title>
    <link rel="icon" href="@Url.Content("~/Content/images/logo-upc-blanco.png")">

    <link rel="stylesheet" href="@Url.Content("~/Content/vendors/bootstrap/dist/css/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/vendors/font-awesome/css/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/vendors/assets/css/form-elements.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/vendors/assets/css/style.css")">
</head>
<body>
    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">

                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 text">
                        <h1>
                            <img src="https://firebasestorage.googleapis.com/v0/b/upcmobdev201602wx71-7e6c3.appspot.com/o/Login%2Flogo.png?alt=media&token=b3eda4e6-b78a-4d74-8971-70597ac5a3fb" alt="logo UPC">
                            Guian - UPC
                            <img src="https://firebasestorage.googleapis.com/v0/b/upcmobdev201602wx71-7e6c3.appspot.com/o/Login%2Fworkout.png?alt=media&token=e4936e6c-5c4d-445d-bbe1-fbe17106db71" width="100px" height="90px" alt="logo UPC">
                        </h1>
                        <div class="description">
                            <p>
                                Si estas interesado en ofrecer servicio de Turismo en nuestra aplicacion esta es la oportunidad! Registrate o inicia sesion para empezar a ofrecer paseos turisticos a travez de nuestra App Guian.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-5">
                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Iniciar Sesión</h3>
                                    <p>Ingrese su usuario y contraseña:</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-key"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                                <form role="form" method="post" action="@Url.Action("Login", "Home")" class="login-form">
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Correo</label>
                                        @Html.TextBoxFor(x => x.ObjEnterprise.email, new { @type = "text", @name = "correo", @placeholder = "Correo...", @class = "form-username form-control", @id = "correo" })
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Contraseña</label>
                                        @Html.TextBoxFor(x => x.ObjEnterprise.password, new { @type = "password", @name = "pass", @placeholder = "Contraseña...", @class = "form-password form-control", @id = "pass" })
                                    </div>
                                    <button type="submit" class="btn"><i class="fa fa-sign-in"></i> Iniciar Sesión</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-1 middle-border"></div>
                    <div class="col-sm-1"></div>

                    <div class="col-sm-5">

                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Regístrate ahora</h3>
                                    <p>
                                        Llena tus datos para poder acceder:<br />
                                        <i>(Solo para Empresas)</i>
                                    </p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-pencil"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                                <form role="form" method="post" action="@Url.Action("AddEnterprise", "Home")" class="registration-form">
                                    <div class="form-group">
                                        <label class="sr-only" for="nombre">Nombre</label>
                                        @Html.TextBoxFor(x => x.ObjEnterprise.name, new { @type = "text", @name = "nombre", @placeholder = "Nombre...", @class = "form-first-name form-control", @id = "nombre" })
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="ruc">RUC</label>
                                        @Html.TextBoxFor(x => x.ObjEnterprise.RUC, new { @type = "text", @name = "ruc", @placeholder = "RUC...", @class = "form-last-name form-control", @id = "ruc" })
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="categoria">Categoria</label>
                                        @Html.TextBoxFor(x => x.ObjEnterprise.category, new { @type = "text", @name = "categorria", @placeholder = "Categoria...", @class = "form-last-name form-control", @id = "categoria" })
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="correo">Correo</label>
                                        @Html.TextBoxFor(x => x.ObjEnterprise.email, new { @type = "text", @name = "correo", @placeholder = "Correo...", @class = "form-last-name form-control", @id = "correo" })
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="pass">Contraseña</label>
                                        @Html.TextBoxFor(x => x.ObjEnterprise.password, new { @type = "password", @name = "pass", @placeholder = "Contraseña...", @class = "form-last-name form-control", @id = "pass" })
                                    </div>
                                    <button type="submit" class="btn">Registrarse</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">

                <div class="col-sm-8 col-sm-offset-2">
                    <div class="footer-border">Integrantes</div>
                    <p>
                        Guian - UPC<br />
                        Desarrollado por: <a href="https://www.facebook.com/david.solanoupec">David Silva</a>,
                         <a href="https://www.facebook.com/ulices.melendezacosta">Ulices Melendez</a>,
                         <a href="https://www.facebook.com/alex.espino.587?fref=ts">Alex Espino</a> e
                         <a href="https://www.facebook.com/delacroix.van.cleef?fref=ts">Vincenzo Gregorio</a>
                    </p>
                </div>

            </div>
        </div>
    </footer>
    <!-- Javascript -->
    <script src="@Url.Content("~/Content/vendors/assets/js/jquery-1.11.1.min.js")"></script>
    <script src="@Url.Content("~/Content/vendors/bootstrap/dist/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/vendors/assets/js/scripts.js")"></script>

</body>
</html>