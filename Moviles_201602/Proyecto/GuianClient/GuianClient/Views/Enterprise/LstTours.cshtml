@model  GuianClient.ViewModel.EnterpriseVM.LstToursVM
@{
    ViewBag.Title = "LstTours";
    ViewBag.Section = "LstTours";
    Layout = "~/Views/Layout/_EnterpriseLayout.cshtml";
}

<form role="form" method="post" action="@Url.Action("LstTours")">
    <div class="x_panel">
        <div class="x_title">
            <div class="title_left">
                <h2>Lista de Lugares</h2>
            </div>
            <div class="title_right">
                <div class="col-md-4 col-sm-4 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.Filtro, new { @class = "form-control", @type = "text", @placeholder = "Nombre a buscar" })
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>cost</th>
                        <th>description</th>
                        <th>enterpriseID</th>
                        <th>logo</th>
                        <th>name</th>
                        <th>tourID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstTours)
                    {
                        <tr>
                            <td>@item.cost</td>
                            <td>@item.description</td>
                            <td>@item.enterpriseID</td>
                            <td>@item.logo</td>
                            <td>@item.name</td>
                            <td>@item.tourID</td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("LstCities",new{ TourID = item.tourID })">
                                    <i class="fa fa-circle"></i> Agregar Lugar al Tour
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("AddEditTour",new{ TourID = item.tourID })">
                                    <i class="fa fa-edit"></i> Editar
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("DeleteTour",new{ TourID = item.tourID })">
                                    <i class="fa fa-remove"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-primary" href="@Url.Action("AddEditTour")"><i class="fa fa-plus"></i> Agregar</a>
        </div>
    </div>
</form>
