@model GuianClient.ViewModel.EnterpriseVM.LstCitiesVM
@{
    ViewBag.Title = "LstTours";
    ViewBag.Section = "LstTours";
    Layout = "~/Views/Layout/_EnterpriseLayout.cshtml";
}
<form role="form" method="post" action="@Url.Action("LstPlaces")">
    <div class="x_panel">
        <div class="x_title">
            <div class="title_left">
                <h2>Lista de Ciudades</h2>
            </div>
            @*<div class="title_right">
                    <div class="col-md-4 col-sm-4 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Filtro, new { @class = "form-control", @type = "text", @placeholder = "Nombre a buscar" })
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </div>*@
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>cityID</th>
                        <th>country</th>
                        <th>name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstCities)
                    {
                        <tr>
                            <td>@item.cityID</td>
                            <td>@item.country</td>
                            <td>@item.name</td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("LstPlaces",new{ CityID = item.cityID,TourID=Model.TourID })">
                                    <i class="fa fa-edit"></i> Ver lugares de esta Ciudad
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-danger" href="@Url.Action("LstTours")"><i class="fa fa-long-arrow-left"></i> Regresar</a>
        </div>
    </div>
</form>

